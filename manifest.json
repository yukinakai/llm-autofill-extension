{
  "manifest_version": 3,
  "name": "LLM Autofill Extension",
  "version": "0.1.0",
  "description": "LLMを活用したインテリジェントなフォーム自動入力拡張機能",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "action": {
    "default_popup": "src/popup/index.html"
  },
  "options_page": "src/options/index.html",
  "background": {
    "service_worker": "src/background/index.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/index.js"]
    }
  ]
}
